
loadimport "script/std.min.soare";

$msg="Hello World!";

@spell(message)
  $index = 0;
  $size = len(message);
  while index < size do
    write message[index];
    if in("AEIOUYaeiouy"; message[index]) do
      write " is vowel"
    end;
    write "\n";
    index = index + 1;
  end;
end;

spell(msg);
write msg, " -> ", reverse(msg), '\n';
