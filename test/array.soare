
loadimport "script/std.min.soare"

let msg="Hello World!";

fn spell(message)

  let index = 0;
  let size = len(message);

  while index < size do

    write(message[index]);

    if in("AEIOUYaeiouy"; message[index]) do
      write(" is vowel")
    end;

    write('\n');
    index = index + 1;

  end;
end;

spell(msg);
write(msg; " -> "; reverse(msg); '\n');
