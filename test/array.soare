
loadimport "script/std.soare"

let msg="Hello World!";

fn spell(message)

  let index = 0;
  let size = len(message);

  while (index < size)

    write(message:index);

    if (find("AEIOUYaeiouy"; message:index) != (0-1))
      write(" is vowel")
    end;

    write('\n');
    index = index + 1;

  end;

end;

spell(msg);
write(msg; " -> "; reverse(msg); '\n');
