
loadimport "script/std.soare"
loadimport "script/math.soare"

let msg = input("Enter a msg: ");
let key = "xxx";

while (1)

  key = input("Enter a key: ");

  if (not(NaN(key)))
    break;
  end;

  werr("[ERROR] Invalid key: "; key ; '\n');

end;

let i = 0;
let l = len(msg);

while (i < l)

  write(chr(ord(msg:i) ^ key));
  i = i + 1;

end;

write('\n');
